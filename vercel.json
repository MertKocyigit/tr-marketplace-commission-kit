{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "regions": ["fra1"],
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "{data/**,_legacy/**}"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/api/index" }
  ]
}
